<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dip" android:top="5dip">
                <shape>
                    <corners android:radius="3dip" />
                    <solid android:color="#D6D6D6" />
                </shape>
            </item>
            <item android:bottom="3dip" android:left="3dip">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="?android:attr/colorPrimaryDark" android:startColor="?android:attr/colorPrimary" />
                    <stroke android:width="1dip" android:color="?android:attr/colorPrimaryDark" />
                    <corners android:radius="4dip" />
                    <padding android:bottom="10dip" android:left="10dip"
                        android:right="10dip" android:top="10dip" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

