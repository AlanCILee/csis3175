<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_theme_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.transblink.ThemeChange">

    <RadioGroup
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/radioGroupThemes"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_alignParentStart="true" >

        <RadioButton
            android:text="Default Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonDefaultTheme"
            android:layout_weight="1" />

        <RadioButton
            android:text="Dark Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonDarkTheme"
            android:layout_weight="1" />

        <RadioButton
            android:text="Light Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButtonLightTheme"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="@string/btnChangeTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupThemes"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonChangeTheme" />

    <Switch
        android:text="Dark Theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonChangeTheme"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:id="@+id/switchTemporary" />

    <TextView
        android:text="We could also use switches like here but idk how well they will work with each other Maybe we can have it so when one is flipped any others on get turned off."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewTemporary3" />

</RelativeLayout>
