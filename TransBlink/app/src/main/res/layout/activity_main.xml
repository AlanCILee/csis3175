<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.transblink.MainActivity">

    <Button
        android:text="@string/btnTrip"
        android:onClick="goToTripPlanner"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonGoToStationChoosing"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/btnMap"
        android:onClick="goToStationMap"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGoToStationChoosing"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/buttonGoToStationMap"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/btnNearest"
        android:onClick="goToNearestStation"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGoToStationMap"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonGoToNearestStation"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/btnAbout"
        android:onClick="goToAboutUs"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGoToStationChoosing"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonGoToAboutUs"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/btnChange"
        android:onClick="goToChangeLog"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGoToAboutUs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonGoToChangelog"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/btnThemes"
        android:onClick="goToThemeChange"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGoToChangelog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/buttonGoToTheme"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/btnStnInfo"
        android:onClick="goToStationInfo"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGoToTheme"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonGoToStationInfo"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/TransBlinkFinalLogo"
        android:id="@+id/imageViewTransBlinkLogo"
        android:layout_above="@+id/buttonGoToNearestStation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
