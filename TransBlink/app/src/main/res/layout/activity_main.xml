<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.transblink.MainActivity"
    style="@style/Theme.AppCompat.Light.DarkActionBar">

    <Button
        android:text="@string/btnMap"
        android:onClick="goToStationMap"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGoToStationChoosing"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/buttonGoToStationMap"
        android:textStyle="normal|bold"

        android:background="?android:attr/colorPrimaryDark"
        android:textColor="?android:attr/colorAccent"
        android:textSize="20sp" />

    <Button
        android:text="@string/btnNearest"
        android:onClick="goToNearestStation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGoToNearestStation"
        android:textStyle="normal|bold"
        android:background="?android:attr/colorPrimaryDark"
        android:textColor="?android:attr/colorAccent"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/buttonGoToStationMap"

        android:layout_alignStart="@+id/buttonGoToStationMap"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/transblinktransparent"
        android:id="@+id/imageViewTransBlinkLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/btnThemes"
        android:onClick="goToThemeChange"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGoToTheme"
        android:textStyle="normal|bold"
        android:background="?android:attr/colorPrimaryDark"
        android:textColor="?android:attr/colorAccent"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonGoToStationChoosing" />

    <Button
        android:text="@string/btnTrip"
        android:onClick="goToTripPlanner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGoToStationChoosing"
        android:textStyle="normal|bold"
        android:background="?android:attr/colorPrimaryDark"
        android:textColor="?android:attr/colorAccent"
        android:textSize="20sp"
        android:layout_above="@+id/buttonGoToTheme"
        android:layout_alignStart="@+id/buttonGoToStationMap"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
