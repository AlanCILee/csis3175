<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trip_planner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.transblink.TripPlanner">

    <ListView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/ListViewStarting"
        android:layout_alignTop="@+id/textViewStartLabel"
        android:layout_toEndOf="@+id/textViewStartLabel"
        android:divider="@color/colorAccent"
        android:dividerHeight="2dp"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Find Route(s)"
        android:onClick="findRoute"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFindRoutes"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <TextView
        android:text="Pick Starting Station From List:"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textViewStartLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Pick Ending Station From List:"
        android:layout_width="150dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEndLabel"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:layout_width="250dp"
        android:id="@+id/ListViewEnding"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/textViewEndLabel"
        android:layout_toEndOf="@+id/textViewEndLabel"
        android:background="@color/colorPrimaryDark"
        android:dividerHeight="2dp"
        android:divider="@color/colorAccent" />
</RelativeLayout>
